{
	"name": "@itsfan/changelogithub",
	"type": "module",
	"version": "1.0.0",
	"packageManager": "pnpm@10.12.1",
	"description": "Generate changelog for GitHub.",
	"author": "FAN",
	"license": "MIT",
	"homepage": "https://github.com/iitsfan/changelogithub#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/iitsfan/changelogithub.git"
	},
	"bugs": "https://github.com/iitsfan/changelogithub/issues",
	"keywords": [
		"github",
		"release",
		"releases",
		"conventional",
		"changelog",
		"log"
	],
	"sideEffects": false,
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.cjs"
		}
	},
	"main": "./dist/index.mjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"bin": "./cli.mjs",
	"files": [
		"*.mjs",
		"dist"
	],
	"engines": {
		"node": ">=12.0.0"
	},
	"scripts": {
		"build": "unbuild",
		"dev": "unbuild --stub",
		"test": "vitest",
		"lint": "eslint .",
		"prepublishOnly": "pnpm run build",
		"release": "bumpp --commit --push --tag",
		"start": "pnpm run dev && node cli.mjs",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@itsfan/eslint-config": "^1.0.2",
		"ansis": "^4.1.0",
		"c12": "^3.0.4",
		"cac": "^6.7.14",
		"changelogen": "0.5.7",
		"convert-gitmoji": "^0.1.5",
		"execa": "^9.6.0",
		"ofetch": "^1.4.1",
		"semver": "^7.7.2",
		"tinyglobby": "^0.2.14"
	},
	"devDependencies": {
		"@antfu/utils": "^9.2.0",
		"@types/debug": "^4.1.12",
		"@types/fs-extra": "^11.0.4",
		"@types/minimist": "^1.2.5",
		"@types/semver": "^7.7.0",
		"bumpp": "^10.2.0",
		"eslint": "^9.29.0",
		"fs-extra": "^11.3.0",
		"typescript": "^5.8.3",
		"unbuild": "^3.5.0",
		"vitest": "^3.2.3"
	}
}
